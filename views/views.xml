<odoo>
  <data>
    <!-- Extensión del formulario de empleado para incluir NSS y DNI -->
    <record id="view_employee_form_es_id" model="ir.ui.view">
      <field name="name">hr.employee.form.es.id</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">
        <!-- Insertar campos después del campo de identificación existente -->
        <xpath expr="//field[@name='identification_id']" position="after">
          <field name="dni" placeholder="12345678A"/>
          <field name="social_security_number" placeholder="281234567890"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
